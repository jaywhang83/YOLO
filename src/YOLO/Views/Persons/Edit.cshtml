@model YOLO.Models.Person

@{
    ViewData["Title"] = "YOLO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Edit</h2>
    <hr />
    <h4>Edit this Person: @Html.DisplayFor(model => model.Name)</h4>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.PersonId)

        <p>@Html.LabelFor(model => model.Name)</p>
        <p>@Html.EditorFor(model => model.Name)</p>

        <p>@Html.LabelFor(Model => Model.Description)</p>
        <p>@Html.TextAreaFor(model => model.Description, new { @class = "form-control" })</p>

        <p>@Html.LabelFor(model => model.Experience)</p>
        <p>@Html.DropDownList("ExperienceId")</p>

        <input type="submit" value="Save" />
    }
    <p>@Html.ActionLink("Back to list", "Index", "Locations")</p>
